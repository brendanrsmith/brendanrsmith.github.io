---
import { Image } from "astro:assets";
import Portfoliocard from "../components/PortfolioCard.astro";
import ferryFriendHero from "../images/ff/hero-long.png";
import profile from "../images/profile-2.jpg";
import rebuHero from "../images/rebu/rebu-square.png";
import tileHome from "../images/tilemaker/tile-home.png";
import Layout from "../layouts/Layout.astro";
import alertClassifierHero from "./alerts/sklearn_files/sklearn_17_1.png";
---

<Layout title="Brendan Smith">
    <div class="mx-auto flex h-screen items-center justify-center">
        <div class="flex-col flex items-center p-5">
            <div class="rounded-full overflow-hidden relative w-48 h-48">
                <div
                    class="absolute inset-0 bg-indigo-500/70 mix-blend-screen z-10"
                >
                </div>
                <Image
                    src={profile}
                    alt={"Brendan Smith"}
                    loading={"eager"}
                    class="grayscale"
                />
            </div>
            <section
                class="space-y-4 text-balance text-indigo-600/80 dark:text-indigo-400 max-w-xs text-center"
            >
                <h1 class="mt-3 text-3xl sm:text-4xl">Brendan Smith</h1>
                <p class="sm:text-lg">
                    I am a software developer <br /> who solves real problems <br
                    /> with modern technologies.
                </p>
                <p class="sm:text-lg">
                    Contact me by emailing <br />
                    <a class="underline decoration-1 hover:decoration-auto" href="mailto:me@brendansmith.dev">
                        me@brendansmith.dev
                    </a>
                </p>
                <p class="inline-flex sm:text-lg justify-around px-4 w-full">
                    <a
                        class="underline decoration-1 hover:decoration-auto"
                        href="https://github.com/brendanrsmith"
                    >
                        GitHub
                    </a>
                    <a
                        class="underline decoration-1 hover:decoration-auto"
                        href="https://www.linkedin.com/in/brendanrsmith/"
                    >
                        LinkedIn
                    </a>
                </p>
            </section>
        </div>
    </div>
    <div
        id="portfolio"
        class="m-auto text-indigo-600/80 dark:text-indigo-400 mb-10"
    >
        <div class="-mt-10 pt-2 text-center">
            <a class="text-inherit lg:text-lg hover:text-inherit" href="#portfolio">
                Projects <span class="font-sans">â¤µ</span>
            </a>
        </div>
        <div class="mx-auto my-8 grid">
            <Portfoliocard
                url={"/alerts"}
                img={alertClassifierHero}
                title={"FerryFriend Alert Classifier"}
                subTitle={"Automated classification of ferry alerts using machine learning"}
            />
            <Portfoliocard
                url={"/ferryfriend"}
                img={ferryFriendHero}
                title={"FerryFriend 4"}
                subTitle={"A ground-up rebuild of the FerryFriend app using React Native"}
            />
            <Portfoliocard
                url={"/rebu"}
                img={rebuHero}
                title={"Rebu Native"}
                subTitle={"A React Native ridesharing app demo completed in 4 days"}
            />
            <Portfoliocard
                url={"/tilemaker-blog"}
                img={tileHome}
                title={"TileMaker"}
                subTitle={"The first thing I ever built"}
            />
        </div>
    </div>
</Layout>
